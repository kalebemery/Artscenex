@model Artsy.Models.ArtistCreate


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Create an Artist</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-2", style= "font-family: 'Times New Roman', Times, serif; font-size: 20px;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ArtistBio, htmlAttributes: new { @class = "control-label col-md-2", style = "font-family: 'Times New Roman', Times, serif; font-size: 20px;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ArtistBio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ArtistBio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ArtistType, htmlAttributes: new { @class = "control-label col-md-2", style = "font-family: 'Times New Roman', Times, serif; font-size: 20px;" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ArtistType, new SelectList(Enum.GetValues(typeof(Artsy.Data.ArtistType))), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ArtistType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
